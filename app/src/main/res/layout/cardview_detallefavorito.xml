<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#40C8BF">

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="580dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_margin="10dp"
        app:cardCornerRadius="4dp"
        tools:context=".controlers.ProductoDetalle">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <ImageView
                android:id="@+id/detalleArreglo_img_id"
                android:layout_width="match_parent"
                android:layout_height="470dp"
                android:scaleType="centerCrop"
                android:layout_margin="10dp"/>


            <TextView
                android:id="@+id/detalleArreglo_text_id"
                android:textColor="#000001"
                android:textSize="25sp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Texto"
                android:fontFamily="cursive"/>
            <TextView
                android:id="@+id/detalleArreglo_textId_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="0dp"/>

            <Button
                android:id="@+id/button2"
                android:layout_gravity="center"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="@string/txtbuttonDetalleFavorito"
                android:background="#40C3FE"
                android:textColor="#FFFFFF"
                android:onClick="onClick"
                android:layout_marginBottom="10dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>